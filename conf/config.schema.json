{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "assetDir": {
      "description": "Assets repository location",
      "type": "string",
      "isDirectory": true,
      "default": "$DATA/assets"
    },
    "defaultAssetRepository": {
      "description": "Default repository to use for asset storage",
      "type": "string",
      "default": "local"
    },
    "expectedFileTypes": {
      "description": "File types allowed for upload",
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": [
        "application/pdf",
        "application/zip",
        "audio/mp3",
        "audio/mpeg",
        "audio/wav",
        "font/woff",
        "font/woff2",
        "image/gif",
        "image/jpeg",
        "image/png",
        "image/svg+xml",
        "image/webp",
        "text/vtt",
        "video/mp4",
        "video/ogv",
        "video/webm"
      ]
    },
    "assetMaxFileSize": {
      "description": "Maximum asset file upload size",
      "type": "string",
      "isBytes": true,
      "isMutable": true,
      "isPublic": true,
      "default": "50mb"
    },
    "thumbnailDir": {
      "description": "Location of local thumbs dir",
      "type": "string",
      "isDirectory": true,
      "default": "$TEMP/asset-thumbs"
    },
    "thumbnailExt": {
      "description": "File extension for thumbnails",
      "type": "string",
      "default": ".png"
    },
    "thumbnailWidth": {
      "description": "Maximum width for thumbnails",
      "type": "number",
      "default": 320
    }
  }
}
