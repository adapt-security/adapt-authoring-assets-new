{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "assetDir": {
      "description": "Assets repository location",
      "type": "string",
      "isDirectory": true,
      "default": "$DATA/assets"
    },
    "defaultAssetRepository": {
      "description": "Default repository to use for asset storage",
      "type": "string",
      "default": "local"
    },
    "expectedFileTypes": {
      "description": "File types allowed for upload",
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": [
        "application/zip",
        "audio/mpeg",
        "audio/wav",
        "image/gif", 
        "image/jpeg", 
        "image/png", 
        "image/svg+xml", 
        "video/mp4"
      ]
    },
    "maxFileUploadSize": {
      "description": "Maximum file upload size",
      "type": "number",
      "default": 1000000
    },
    "thumbnailDir": {
      "description": "Location of local thumbs dir",
      "type": "string",
      "isDirectory": true,
      "default": "$TEMP/asset-thumbs"
    },
    "thumbnailWidth": {
      "description": "Maximum width for thumbnails",
      "type": "number",
      "default": 320
    }
  }
}
